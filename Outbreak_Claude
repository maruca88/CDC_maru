    <script>
        // Smooth scrolling and interactive elements
        document.addEventListener('DOMContentLoaded', function() {
            // Animate progress bar on load
            setTimeout(() => {
                const progressBar = document.getElementById('progressBar');
                const progressText = document.getElementById('progressText');
                progressBar.style.width = '5%';
                progressText.textContent = 'Ready to Begin (0/15 sections)';
            }, 1000);

            // Add more floating particles dynamically
            createFloatingParticles();
        });

        function createFloatingParticles() {
            const particleCount = 8;
            const body = document.body;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.top = Math.random() * 100 + '%';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.width = (Math.random() * 4 + 2) + 'px';
                particle.style.height = particle.style.width;
                particle.style.animationDelay = Math.random() * 6 + 's';
                particle.style.animationDuration = (Math.random() * 4 + 4) + 's';
                body.appendChild(particle);
            }
        }

        function startScenario() {
            const btn = event.target.closest('.btn');
            const originalText = btn.innerHTML;
            
            btn.innerHTML = '<div class="loading"></div> <span>Loading Scenario...</span>';
            btn.disabled = true;
            
            // Animate progress bar
            const progressBar = document.getElementById('progressBar');
            const progressText = document.getElementById('progressText');
            progressBar.style.width = '10%';
            progressText.textContent = 'Initializing... (1/15 sections)';
            
            // Simulate loading and redirect to first scenario
            setTimeout(() => {
                alert('Scenario would start here! This connects to your original Twine content.');
                btn.innerHTML = originalText;
                btn.disabled = false;
            }, 2000);
        }

        function showHelp() {
            alert('Help resources and epidemiological guidelines would be displayed here.');
        }

        function checkAudio() {
            const btn = event.target.closest('.btn');
            const originalText = btn.innerHTML;
            
            btn.innerHTML = '<div class="loading"></div> <span>Testing Audio...</span>';
            
            // Simulate audio test
            setTimeout(() => {
                alert('üîä Audio test complete! Your system audio is working properly.');
                btn.innerHTML = originalText;
            }, 1500);
        }

        function reviewGuidelines() {
            alert('üìñ Epidemiological response guidelines and reference materials would be displayed here.');
        }

        function resetProgress() {
            const progressBar = document.getElementById('progressBar');
            const progressText = document.getElementById('progressText');
            
            progressBar.style.width = '0%';
            progressText.textContent = 'Progress Reset (0/15 sections)';
            
            setTimeout(() => {
                progressBar.style.width = '5%';
                progressText.textContent = 'Ready to Begin (0/15 sections)';
            }, 500);
        }

        // Add subtle hover effects to cards
        document.querySelectorAll('.card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-8px)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });

        // Intersection Observer for scroll animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observe all animated elements
        document.querySelectorAll('.fade-in, .slide-in-left, .slide-in-right').forEach(el => {
            observer.observe(el);
        });
    </script>
</body>
</html>
